// Ref: https://firebase.google.com/docs/hosting/cloud-run#direct_requests_to_container
{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*"],

    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "hossammagdy-dev", // CloudRun service name (where the container image is deployed, via gcloud)
          "region": "europe-west1" // optional (if omitted, default is us-central1)
        }
      }
    ]
  }
}
