// https://firebase.google.com/docs/cli
// https://firebase.google.com/docs/functions/manage-functions
{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsFunc"
      }
    ]
  },
  "functions": {
    "source": ".",
    "predeploy": [
      "npm --prefix \"$PROJECT_DIR\" install", // ensure node_modules are installed (with devDep)
      "npm --prefix \"$PROJECT_DIR\" run build", // and build/compile nextJs
      "rm -rf \"$PROJECT_DIR/node_modules\"",
      "npm --prefix \"$PROJECT_DIR\" --production install"
    ]
  }
}
